<p id="notice"><%= notice %></p>
<center>
<h1>Games</h1>

<table width="60%" class="table-bordered table-striped">
  <thead>
    <tr>
      <th style="text-align: center">Name</th>            
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>                
        <td align="center"><div class="btn btn-primary btn-lg active"><%= link_to game.name, "games/" + game.id.to_s %></div></td>        
      </tr>
    <% end %>
  </tbody>
</table>
</center>
<br>

