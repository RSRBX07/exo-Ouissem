<div class="col-md-6 col-md-offset-3">
<p id="notice"><%= notice %></p>
<h1>Games</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>            
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>                
        <td align="center"><div class="btn btn-info active" style="width:40%;"><%= link_to game.name, "games/" + game.id.to_s %></div></td>        
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

